pipeline {
    agent { label 'docker-builder' }
    
    environment {
        DOCKER_HOST = "tcp://docker.local:2375"
        DOCKER_REGISTRY = "rbrandstaedter"
        LOG_LEVEL = "INFO"
        BUILD_NUMBER = "${BUILD_NUMBER}"
        TAG = "0.${BUILD_NUMBER}"
        DOCKERHUB_LOGIN = credentials('docker-login-private')
        GITHUB_AUTH_TOKEN = credentials('github_auth_token')
        git_branch = "${GIT_BRANCH}"
        BRANCH_NAME = git_branch.substring(git_branch.lastIndexOf('/') + 1, git_branch.length())
    }

    stages {
        stage('Build Docker Images') {
            steps {
                sh 'printenv'
                dir("${env.WORKSPACE}/src"){
                    sh label: 'Set up X-Builder', script: 'docker buildx rm crossbuilder && docker buildx create --name crossbuilder --platform linux/amd64,linux/arm/v7 && docker buildx ls && docker buildx use crossbuilder && docker buildx inspect --bootstrap'
                    sh label: 'Build solarflow-control', script: 'docker -H ${DOCKER_HOST} buildx build --build-arg IMAGE=rbrandstaedter/solarflow-control-baseimage:${BRANCH_NAME} --platform linux/amd64,linux/arm/v7 -t ${DOCKER_REGISTRY}/solarflow-control:${BRANCH_NAME} .'
                }
                script {
                    if (env.BRANCH_NAME == 'master') {
                        dir("${env.WORKSPACE}/src"){
                            sh label: 'Set up X-Builder', script: 'docker buildx rm crossbuilder && docker buildx create --name crossbuilder --platform linux/amd64,linux/arm/v7 && docker buildx ls && docker buildx use crossbuilder && docker buildx inspect --bootstrap'
                            sh label: 'Build solarflow-control', script: 'docker -H ${DOCKER_HOST} buildx build --build-arg IMAGE=rbrandstaedter/solarflow-control-baseimage:${BRANCH_NAME} --platform linux/amd64,linux/arm/v7 -t ${DOCKER_REGISTRY}/solarflow-control:${TAG} -t ${DOCKER_REGISTRY}/solarflow-control:latest .'
                        }
                        dir("${env.WORKSPACE}/imageexport") {
                            sh label: 'GitHub CLI login', script: 'echo ${GITHUB_AUTH_TOKEN} | gh auth login --with-token'
                            sh label: 'GitHub CLI status', script: 'gh auth status'
                            //sh label: 'Save docker images', script: 'docker save -o solarflow-control-${TAG}.tar ${DOCKER_REGISTRY}/solarflow-control:${TAG}'
                            sh label: 'Create Release', script: 'gh release create ${TAG} --generate-notes -t "Release ${TAG}"'
                        }
                    }
                }
            }
        }
        stage('Push Docker Images') {
            steps {
                sh label: 'Docker Login', script: 'docker login -u ${DOCKERHUB_LOGIN_USR} -p ${DOCKERHUB_LOGIN_PSW}'
                dir("${env.WORKSPACE}/src") {
                    sh label: 'Push solarflow-control', script: 'docker buildx build --push --build-arg IMAGE=rbrandstaedter/solarflow-control-baseimage:${BRANCH_NAME} --platform linux/amd64,linux/arm/v7 -q -t ${DOCKER_REGISTRY}/solarflow-control:${BRANCH_NAME} .'
                }
                script {
                    if (env.BRANCH_NAME == 'master') {
                        dir("${env.WORKSPACE}/src"){
                            sh label: 'Push solarflow-control', script: 'docker buildx build --push --build-arg IMAGE=rbrandstaedter/solarflow-control-baseimage:${BRANCH_NAME} --platform linux/amd64,linux/arm/v7 -q -t ${DOCKER_REGISTRY}/solarflow-control:latest .'
                            sh label: 'Push solarflow-control', script: 'docker buildx build --push --build-arg IMAGE=rbrandstaedter/solarflow-control-baseimage:${BRANCH_NAME} --platform linux/amd64,linux/arm/v7 -q -t ${DOCKER_REGISTRY}/solarflow-control:${TAG} .'
                        }
                    }
                }
            }   
        }
    }
    post {
        always {
            cleanWs(cleanWhenNotBuilt: false,
                    deleteDirs: true,
                    disableDeferredWipeout: true,
                    notFailBuild: true)
        }
    }
}