{
    "expire_after": 300,
    "name": "Battery {{battery_index}} Minimal Voltage",
    "stat_t": "~minVol",
    "value_template": "{% raw %}{% if value | int > 0 %}{{ value | multiply(0.01) |round(3)| float }}{% else %}{% endif %}{% endraw %}",
    "uniq_id": "{{ device_id }}-{{ battery_serial }}-minVol",
    "unit_of_meas": "V",
    "dev_cla": "voltage",
    "state_class": "measurement",
    "dev": {
      "identifiers": ["{{ device_id }}"],
      "manufacturer": "Zendure",
      "model": "Solarflow",
      "name": "Solarflow Hub",
      "sw_version": "{{ fw_version }}"
    },
    "~": "solarflow-hub/{{ device_id }}/telemetry/batteries/{{ battery_serial }}/"
}
