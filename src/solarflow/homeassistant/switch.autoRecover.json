{
    "name": "Automatic Bypass recovery",
    "cmd_t": "iot/{{ product_id }}/{{ device_id }}/properties/write",
    "stat_t": "~autoRecover",
    "uniq_id": "{{ device_id }}-autoRecover",
    "dev_cla": "switch",
    "payload_on": "{\"properties\": {\"autoRecover\": 1 }}",
    "payload_off": "{\"properties\": {\"autoRecover\": 0 }}",
    "state_on": 1,
    "state_off": 0,
    "dev": {
      "identifiers": ["{{ device_id }}"],
      "manufacturer": "Zendure",
      "model": "Solarflow",
      "name": "Solarflow Hub",
      "sw_version": "{{ fw_version }}"
    },
    "~": "solarflow-hub/{{ device_id }}/telemetry/"
}
